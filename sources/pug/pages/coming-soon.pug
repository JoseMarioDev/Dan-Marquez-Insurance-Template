extends  ../_skeleton

block variables
	- var pageName = 'Coming soon'
	- var bodyClass = ['one-screen-page', 'bg-gray-darker', 'bg-image'];
	- var bodyImage = 'bg-coming-soon'

block title
	title=pageName

block page
	section.section.section-single.novi-background.bg-gray-darker.bg-image(style='background-image: url(images/bg-404.jpg);')
		.section-single-inner
			//- Page Header
			include ../sections/_section-header-base-transparent

			.section-single-main
				.container
					.row.justify-content-md-center.row-40.row-md-60.row-xl-90
						.col-md-12
							h3.text-spacing--25.font-weight-bold
								| We're Getting Ready
								br
								| to launch in
							.block-centered
								//- Countdown
								.countdown.countdown-default.countdown-inverse(data-type='until', data-time='31 Dec 2018 16:00', data-format='dhms')

							p.text-white(style='opacity: 0.8;')
								| Our website is under construction, we are working very hard
								br.d-none.d-sm-block
								|  to give you the best experience on our new web site.

						.col-md-6.col-lg-5.col-xl-4
							h5 Stay ready, we`re launching soon
							//- RD Mailform
							form.rd-mailform.form-modern.form-inverse(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
								.form-wrap
									label.form-label(for="contact-email") Email
									input#contact-email.form-input(type="email" name="email" data-constraints="@Email @Required")
								button(type="submit").btn.btn-primary.btn-block Subscribe
			='\n'

			//- Page Footer
			include ../sections/_section-footer-base-transparent